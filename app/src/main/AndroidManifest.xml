<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:versionCode="3"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".fhir.FhirApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zanzibar"
        tools:targetApi="31">
        <activity
            android:name=".shared.PractitionerDetails"
            android:exported="false" />
        <activity
            android:name=".vaccine.selections.VaccineSelection"
            android:exported="false" />
        <activity
            android:name=".detail.ui.main.appointments.AppointmentDetails"
            android:exported="false" />
        <activity
            android:name=".detail.ui.main.appointments.AddAppointment"
            android:exported="false" />
        <activity
            android:name=".detail.ui.main.AdverseEventActivity"
            android:exported="false" />
        <activity
            android:name=".vaccine.stock_management.VaccineStockManagement"
            android:exported="false"
            android:label="Client Details"
            android:parentActivityName=".detail.PatientDetailActivity" />
        <activity
            android:name=".shared.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".shared.Login"
            android:exported="false" />
        <activity
            android:name=".vaccine.AdministerVaccine"
            android:exported="false" />
        <activity
            android:name=".detail.PatientDetailActivity"
            android:exported="false"
            android:label=""
            android:theme="@style/Theme.Zanzibar.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="" />
        <activity
            android:name=".shared.Splash"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
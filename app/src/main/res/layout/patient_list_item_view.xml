<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="@dimen/fab_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/viewName"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"
                    tools:text="Name:" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_text_margin"
                    android:layout_marginBottom="@dimen/small_text_margin"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    tools:text="Navya Patel" />


            </LinearLayout>

            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/bac_trans"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/viewId"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"
                    tools:text="ID Number:" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/idNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_text_margin"
                    android:layout_marginBottom="@dimen/small_text_margin"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    tools:text="123456" />


            </LinearLayout>

            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/bac_trans"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/viewPhoneNumber"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"
                    tools:text="Phone number:" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_text_margin"
                    android:layout_marginBottom="@dimen/small_text_margin"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    tools:text="07123456789" />


            </LinearLayout>

            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/bac_trans"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

        <Button
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/btnView"
            android:text="View"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>
